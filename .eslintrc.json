{
    "env": {
      "browser": true,
      "es6": true,
      "jest/globals": true
    },
    "plugins": [
      "jest"
    ],
    "extends": "eslint:recommended",
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "max-len": ["error", { 
        "code": 145, 
        "ignoreStrings": true,
        "comments": 150,
        "tabWidth": 4
      }],
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "warn",
      "jest/no-identical-title": "error",
      "jest/prefer-to-have-length": "warn",
      "jest/valid-expect": "error",
      "linebreak-style": "off",
      "no-console": "off",
      "no-else-return": "error",
      "require-await": "error",
      "no-trailing-spaces": "error",
      "indent": [
        "error",
        "tab",
        {
          "SwitchCase": 1
        }
      ],
      "quotes": ["error", "single", { "allowTemplateLiterals": true }],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "semi": [
        "error",
        "always"
      ],
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "always",
          "named": "never",
          "asyncArrow": "always"
        }
      ]
    }
  }
  